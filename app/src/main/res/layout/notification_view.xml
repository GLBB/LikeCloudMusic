<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/black">

    <ImageView android:id="@+id/close"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:paddingRight="@dimen/dp_10"
               android:paddingTop="@dimen/dp_10"
               android:src="@drawable/close_48"/>

    <ImageView android:id="@+id/thumb"
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_100"
               android:scaleType="centerCrop"
               android:src="@drawable/pic_loading_150"/>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@id/close"
        android:layout_toRightOf="@id/thumb"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        tools:text="减肥的空间里的顾忌估计的发个梵蒂复健科的根据地方官匪勾"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/song_name"
        android:layout_below="@id/song_name"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toLeftOf="@id/close"
        android:textColor="@color/alpha_60_white"
        android:textSize="@dimen/sp_12"
        tools:text="@string/info_test"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/thumb"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5">

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/notification_love_checked_48"/>

        <ImageView
            android:id="@+id/last"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/notification_last_48"/>
        <ImageView
            android:id="@+id/toggle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/notification_play_64"/>
        <ImageView
            android:id="@+id/next"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/notification_next_48"/>
        <ImageView
            android:id="@+id/lyric"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/notification_lyric_64"/>
    </LinearLayout>
</RelativeLayout>